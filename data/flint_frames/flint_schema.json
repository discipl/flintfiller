{
    "$schema": "https://json-schema.org/draft/2019-09/schema#",
    "type": "object",
    "definitions": {
        "source": {
            "type": "object",
            "properties": {
                "validFrom": {
                    "type": "string",
                    "pattern": "^[0-9]{2}-[0-9]{2}-[0-9]{4}$"
                },
                "validTo": {
                    "type": "string",
                    "pattern": "^[0-9]{2}-[0-9]{2}-[0-9]{4}$"
                },
                "citation": {
                    "type": "string"
                },
                "juriconnect": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                }
            },
            "required": [
                "validFrom",
                "citation",
                "juriconnect",
                "text"
            ],
            "defaultSnippets": [
                {
                    "label": "New Source",
                    "description": "Insert a new source",
                    "body": {
                        "validFrom": "$1",
                        "validTo": "$2",
                        "citation": "$3",
                        "juriconnect": "$4",
                        "text": "$5"
                    }
                }
            ]
        },
        "expression": {
            "anyOf": [
                {
                    "type": "string",
                    "pattern": "^\\[[^[\\]]*\\]$",
                    "defaultSnippets": [
                        {
                            "label": "Fact",
                            "description": "Insert fact",
                            "body": "[$1]"
                        }
                    ]
                },
                {
                    "$ref": "#/definitions/multi"
                },
                {
                    "$ref": "#/definitions/not"
                },
                {
                    "$ref": "#/definitions/list"
                }
            ]
        },
        "list": {
            "type": "object",
            "properties": {
                "expression": {
                    "type": "string",
                    "pattern": "^LIST$"
                },
                "name": {
                    "type": "string"
                },
                "items": {
                    "$ref": "#/definitions/expression"
                }
            },
            "required": [
                "expression",
                "name",
                "items"
            ],
            "defaultSnippets": [
                {
                    "label": "LIST",
                    "description": "Insert LIST",
                    "body": {
                        "expression": "LIST",
                        "name": "$1",
                        "items": "^$2"
                    }
                }
            ]
        },
        "multi": {
            "type": "object",
            "properties": {
                "expression": {
                    "type": "string",
                    "pattern": "^(AND)|(OR)|(LESS_THAN)|(EQUAL)|(SUM)|(PRODUCT)|(MIN)|(MAX)$"
                },
                "operands": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/expression"
                    }
                }
            },
            "required": [
                "expression",
                "operands"
            ],
            "defaultSnippets": [
                {
                    "label": "AND",
                    "description": "Insert AND",
                    "body": {
                        "expression": "AND",
                        "operands": [
                            "^$1"
                        ]
                    }
                },
                {
                    "label": "OR",
                    "description": "Insert OR",
                    "body": {
                        "expression": "OR",
                        "operands": [
                            "^$1"
                        ]
                    }
                },
                {
                    "label": "LESS_THAN",
                    "description": "Insert LESS_THAN",
                    "body": {
                        "expression": "LESS_THAN",
                        "operands": [
                            "^$1"
                        ]
                    }
                },
                {
                    "label": "EQUAL",
                    "description": "Insert EQUAL",
                    "body": {
                        "expression": "EQUAL",
                        "operands": [
                            "^$1"
                        ]
                    }
                },
                {
                    "label": "SUM",
                    "description": "Insert SUM",
                    "body": {
                        "expression": "SUM",
                        "operands": [
                            "^$1"
                        ]
                    }
                },
                {
                    "label": "PRODUCT",
                    "description": "Insert PRODUCT",
                    "body": {
                        "expression": "PRODUCT",
                        "operands": [
                            "^$1"
                        ]
                    }
                },
                {
                    "label": "MIN",
                    "description": "Insert MIN",
                    "body": {
                        "expression": "MIN",
                        "operands": [
                            "^$1"
                        ]
                    }
                },
                {
                    "label": "MAX",
                    "description": "Insert MAX",
                    "body": {
                        "expression": "MAX",
                        "operands": [
                            "^$1"
                        ]
                    }
                }
            ]
        },
        "not": {
            "type": "object",
            "properties": {
                "expression": {
                    "type": "string",
                    "pattern": "^NOT$"
                },
                "operand": {
                    "$ref": "#/definitions/expression"
                }
            },
            "required": [
                "expression",
                "operand"
            ],
            "defaultSnippets": [
                {
                    "label": "NOT",
                    "description": "Insert NOT",
                    "body": {
                        "expression": "NOT",
                        "operand": "^$1"
                    }
                }
            ]
        }
    },
    "properties": {
        "acts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "act": {
                        "type": "string"
                    },
                    "actor": {
                        "type": "string"
                    },
                    "action": {
                        "type": "string"
                    },
                    "object": {
                        "type": "string"
                    },
                    "interested-party": {
                        "type": "string"
                    },
                    "preconditions": {
                        "$ref": "#/definitions/expression"
                    },
                    "create": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "terminate": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "sources": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/source"
                        }
                    },
                    "version": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "reference": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "juriconnect": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "sourcetext": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "explanation": {
                        "type": "string"
                    }
                },
                "required": [
                    "act",
                    "actor",
                    "action",
                    "object",
                    "interested-party",
                    "preconditions",
                    "create",
                    "terminate",
                    "sources",
                    "explanation"
                ],
                "defaultSnippets": [
                    {
                        "label": "New Act",
                        "description": "Insert a new act",
                        "body": {
                            "act": "<<$1>>",
                            "actor": "[$2]",
                            "action": "[$3]",
                            "object": "[$4]",
                            "interested-party": "[$5]",
                            "preconditions": "$6",
                            "create": [],
                            "terminate": [],
                            "sources": [],
                            "explanation": "$13"
                        }
                    }
                ]
            }
        },
        "facts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "fact": {
                        "type": "string"
                    },
                    "function": {
                        "$ref": "#/definitions/expression"
                    },
                    "sources": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/source"
                        }
                    },
                    "version": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "art": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "juriconnect": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "sourcetext": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "explanation": {
                        "type": "string"
                    }
                },
                "required": [
                    "fact",
                    "function",
                    "sources",
                    "explanation"
                ],
                "defaultSnippets": [
                    {
                        "label": "New Fact",
                        "description": "Insert a new fact",
                        "body": {
                            "fact": "[$1]",
                            "function": "[$2]",
                            "version": "$3",
                            "sources": [],
                            "explanation": "$7"
                        }
                    }
                ]
            }
        },
        "duties": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "duty": {
                        "type": "string"
                    },
                    "duty-components": {
                        "type": "string"
                    },
                    "duty-holder": {
                        "type": "string"
                    },
                    "claimant": {
                        "type": "string"
                    },
                    "create": {
                        "type": "string"
                    },
                    "terminate": {
                        "type": "string"
                    },
                    "sources": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/source"
                        }
                    },
                    "version": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead"
                    },
                    "reference": {
                        "type": "string",
                        "deprecationMessage": "Use the 'sources' attribute instead",
                        "juriconnect": {
                            "type": "string",
                            "deprecationMessage": "Use the 'sources' attribute instead"
                        },
                        "sourcetext": {
                            "type": "string",
                            "deprecationMessage": "Use the 'sources' attribute instead"
                        },
                        "explanation": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "duty",
                        "duty-components",
                        "duty-holder",
                        "claimant",
                        "create",
                        "terminate",
                        "sources",
                        "explanation"
                    ],
                    "defaultSnippets": [
                        {
                            "label": "New Duty",
                            "description": "Insert a new duty",
                            "body": {
                                "duty": "<$1>",
                                "duty-components": "$2",
                                "duty-holder": "[$3]",
                                "claimant": "[$4]",
                                "create": "$5",
                                "terminate": "$6",
                                "sources": [],
                                "explanation": "$7"
                            }
                        }
                    ]
                }
            }
        },
        "required": [
            "acts",
            "facts",
            "duties"
        ]
    }
}